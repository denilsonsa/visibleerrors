{
	"manifest_version": 2,
	"name": "Visible Errors",
	"short_name": "Visible Errors",
	"description": "Show a notification for all JavaScript errors.",
	"version": "1.0.1",

	"incognito" : "spanning",

	"content_scripts": [
		{
			"all_frames": true,
			"css": [ "style.css" ],
			"js": [ "content.js" ],
			"matches": [ "http://*/*", "https://*/*", "file://*/*" ],
			"run_at": "document_start"
		}
	],

	"icons": {
		"128": "img/icon_128.png",
		"64": "img/icon_64.png",
		"48": "img/icon_48.png",
		"32": "img/icon_32.png",
		"16": "img/icon_16.png"
	},
	
	"options_page": "options.html",
	"background": {
	    "scripts": ["background.js"]
	  }

}
